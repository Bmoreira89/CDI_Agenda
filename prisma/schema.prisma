generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  medico
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  crm           String?
  passwordHash  String
  role          Role      @default(medico)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  eventos       Evento[]
  permissoes    PermissaoCidade[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Cidade {
  id        String   @id @default(cuid())
  nome      String   @unique
  createdAt DateTime @default(now())

  eventos    Evento[]
  permissoes PermissaoCidade[]
}

model PermissaoCidade {
  id       String @id @default(cuid())
  userId   String
  cidadeId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  cidade Cidade @relation(fields: [cidadeId], references: [id], onDelete: Cascade)

  @@unique([userId, cidadeId])
}

model Evento {
  id        String   @id @default(cuid())
  data      DateTime
  quantidade Int

  userId    String
  cidadeId  String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  cidade Cidade @relation(fields: [cidadeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([data])
  @@index([userId])
  @@index([cidadeId])
  @@unique([data, userId, cidadeId])
}