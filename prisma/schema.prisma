datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  nome      String
  crm       String?
  email     String   @unique
  senha     String
  perfil    String   @default("medico") // "admin" ou "medico"
  createdAt DateTime @default(now())

  eventos   Evento[]
  logs      LogAcao[]
}

model Cidade {
  id   Int    @id @default(autoincrement())
  nome String @unique
}

model Evento {
  id         Int      @id @default(autoincrement())
  date       DateTime
  cidade     String
  quantidade Int
  medicoId   Int
  medicoNome String

  medico     User     @relation(fields: [medicoId], references: [id])
  createdAt  DateTime @default(now())
}

model LogAcao {
  id        Int      @id @default(autoincrement())
  usuarioId Int?
  usuario   User?    @relation(fields: [usuarioId], references: [id])
  acao      String
  detalhes  String?
  dataHora  DateTime @default(now())
}