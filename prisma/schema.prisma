datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model MedicoAgenda {
  id        Int      @id @default(autoincrement())
  nome      String
  crm       String?
  email     String   @unique
  senha     String
  perfil    String   @default("medico") // "admin" ou "medico"
  createdAt DateTime @default(now())

  eventos   EventoAgenda[]
  logs      LogAcao[]
}

model CidadeAgenda {
  id   Int    @id @default(autoincrement())
  nome String @unique
  permissoes PermissaoCidadeAgenda[]
}

model EventoAgenda {
  id         Int      @id @default(autoincrement())
  data       DateTime
  cidade     String
  quantidade Int
  medicoId   Int
  medicoNome String
  createdAt  DateTime @default(now())

  medico     MedicoAgenda @relation(fields: [medicoId], references: [id])
}

model LogAcao {
  id        Int           @id @default(autoincrement())
  usuarioId Int?
  usuario   MedicoAgenda? @relation(fields: [usuarioId], references: [id])

  acao      String
  detalhes  String?
  dataHora  DateTime      @default(now())
}
model PermissaoCidadeAgenda {
  id        Int      @id @default(autoincrement())
  email     String
  cidadeId  Int
  createdAt DateTime @default(now())

  // Relaciona por email (preferência sua)
  medico MedicoAgenda? @relation(fields: [email], references: [email])
  cidade CidadeAgenda   @relation(fields: [cidadeId], references: [id])

  @@unique([email, cidadeId])
  @@index([email])
  @@index([cidadeId])
}

